doctype html
link(rel='stylesheet' href='css/style.css')

head
    title Simple To-do App
body
    h1 Simple To-do App
    section
        form.newItem(action="/" method="POST")
            label(for="newItem") Add a to-do item: 
            input(type="text" id="newItem" name="newItem")
            input.button.add(type="submit" value="Add")
    section.list
        h2 To-do List
        ul
            - for (let i = 0; i < tasks.length; i++)
                li.listItem
                    p= `[${tasks[i].id}] ${tasks[i].task}`
                    form(action="/delete" method="POST")
                        input(type="hidden" name="id" value=tasks[i].id)
                        input.button.delete(type="submit" value="Delete")